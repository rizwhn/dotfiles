# =============================================================================
# Brewfile - Homebrew Dependencies
# =============================================================================
# Install all packages with: brew bundle --file=Brewfile
# =============================================================================

# =============================================================================
# CORE TOOLS
# =============================================================================

brew "stow"                 # Dotfiles management
brew "neovim"               # Text editor
brew "git"                  # Version control

# =============================================================================
# MODERN CLI TOOLS
# =============================================================================

brew "bat"                  # Better cat with syntax highlighting
brew "tree"                 # Directory visualization
brew "atuin"                # Searchable shell history
brew "zsh-autosuggestions"  # Command suggestions

# =============================================================================
# GIT TOOLS
# =============================================================================

brew "lazygit"              # Terminal UI for git
brew "gh"                   # GitHub CLI

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

brew "go"                   # Go programming language
brew "gopls"                # Go language server
brew "golangci-lint"        # Go linter
brew "nvm"                  # Node version manager
brew "pyenv"                # Python version manager
brew "pyenv-virtualenv"     # Pyenv virtualenv plugin

# =============================================================================
# TERMINAL
# =============================================================================

# Ghostty is installed separately:
# Download from: https://ghostty.org
# Or: brew install --cask ghostty (if available)

# =============================================================================
# OPTIONAL TOOLS
# =============================================================================

# Uncomment if needed:
# brew "tmux"                # Terminal multiplexer
# brew "jq"                  # JSON processor
# brew "htop"                # Better top
# brew "tldr"                # Simplified man pages
# brew "wget"                # File downloader
