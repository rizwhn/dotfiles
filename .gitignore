
# =============================================================================
# Dotfiles Repository .gitignore
# =============================================================================

# =============================================================================
# SECRETS & LOCAL CONFIGURATION
# =============================================================================

**/.zshrc.local
**/secrets/
**/.env.local
**/.env.*.local

# =============================================================================
# API KEYS & TOKENS
# =============================================================================

**/api_keys.txt
**/*_key.txt
**/*_token.txt

# =============================================================================
# MACHINE-SPECIFIC FILES
# =============================================================================

.DS_Store
.localized
*.swp
*.swo
*~

# =============================================================================
# EDITOR TEMPORARY FILES
# =============================================================================

.vscode/
.idea/
*.vim
.netrwhist

# =============================================================================
# NEOVIM PLUGIN DATA (Don't track plugin installations)
# =============================================================================

nvim/.config/nvim/lazy-lock.json
nvim/.config/nvim/plugin/
nvim/.config/nvim/.luarc.json

# =============================================================================
# ZSH
# =============================================================================

.zsh_history
.zcompdump*
.zsh_sessions/

# =============================================================================
# GIT
# =============================================================================

.git-credentials

# =============================================================================
# LAZYGIT
# =============================================================================

lazygit/.config/lazygit/state.yml

# =============================================================================
# NODE
# =============================================================================

node_modules/
package-lock.json
yarn.lock

# =============================================================================
# PYTHON
# =============================================================================

__pycache__/
*.pyc
*.pyo
.python-version

# =============================================================================
# BACKUP FILES
# =============================================================================

*.backup
*.bak
*.old
